{{#if this.isEditing}}
  <form class="flex flex-col" {{on "submit" this.saveDetail}}>
    <Textarea class="text-black rounded p-4" cols="100" rows="8" @value={{@description}} />
    <button type="submit" class="btnPrimary self-end mt-4">Sauvegarder</button>
  </form>
{{else}}
<div class="flex flex-col">
  <p>{{@description}}</p>
  <button class="btnPrimary self-end mt-4" {{on "click" this.toggleEditing}}>Editer</button>
</div>
{{/if}}